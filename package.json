{
  "name": "@opencoredev/excalidraw-cli",
  "version": "3.0.0",
  "description": "CLI + agent skill for controlling a live Excalidraw canvas from AI agents",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "excalidraw": "src/cli.ts"
  },
  "scripts": {
    "test": "bun test",
    "build": "bun run build:frontend",
    "build:frontend": "vite build",
    "dev": "concurrently \"bun src/server.ts\" \"vite\"",
    "canvas": "bun src/server.ts",
    "type-check": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@excalidraw/mermaid-to-excalidraw": "^1.1.3",
    "commander": "^14.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mermaid": "^11.12.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "keywords": [
    "excalidraw",
    "cli",
    "agent-skill",
    "ai",
    "drawing",
    "diagrams",
    "canvas",
    "real-time",
    "websocket",
    "visualization",
    "claude",
    "ai-tools",
    "skills-sh"
  ],
  "author": {
    "name": "opencoredev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencoredev/excalidraw-cli.git"
  },
  "homepage": "https://github.com/opencoredev/excalidraw-cli#readme",
  "bugs": {
    "url": "https://github.com/opencoredev/excalidraw-cli/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "src/**/*",
    "skills/**/*",
    "dist/frontend/**",
    "README.md",
    "LICENSE"
  ]
}
